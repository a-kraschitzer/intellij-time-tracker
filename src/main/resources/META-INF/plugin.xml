<idea-plugin>
    <id>net.kraschitzer.intellij.plugin.sevenpace.7pace-intellij-plugin</id>
    <name>7pace Time Tracker</name>
    <vendor url="https://github.com/a-kraschitzer">Andreas Kraschitzer</vendor>

    <description><![CDATA[
    This plugin utilizes the 7pace time tracker open REST API to facilitate the tracking of work items from within the IntelliJ IDE.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="net.kraschitzer.intellij.plugin.sevenpace.view.Settings"/>
        <toolWindow id="7PaceToolWindow"
                    anchor="bottom"
                    secondary="true"
                    icon="/net/kraschitzer/intellij/plugin/sevenpace/icons/sevenicon.png"
                    factoryClass="net.kraschitzer.intellij.plugin.sevenpace.view.SevenPaceToolWindowFactory"/>
        <applicationService serviceInterface="net.kraschitzer.intellij.plugin.sevenpace.communication.ICommunicator"
                            serviceImplementation="net.kraschitzer.intellij.plugin.sevenpace.communication.Communicator"/>
        <applicationService serviceImplementation="net.kraschitzer.intellij.plugin.sevenpace.NotificationManager"/>
    </extensions>
</idea-plugin>